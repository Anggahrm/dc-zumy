{
  "name": "zumynext",
  "version": "1.0.0",
  "private": true,
  "description": "ZumyNext Discord bot with modular architecture",
  "type": "module",
  "engines": {
    "bun": ">=1.1.0"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#core/*": "./src/core/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*",
    "#app/*": "./src/*"
  },
  "scripts": {
    "start": "bun run src/main.js",
    "dev": "ZUMY_STARTUP_DEPLOY_MODE=off bun --watch run src/main.js",
    "dev:global": "ZUMY_STARTUP_DEPLOY_MODE=global bun --watch run src/main.js",
    "dev:guild": "ZUMY_STARTUP_DEPLOY_MODE=guild bun --watch run src/main.js",
    "dev:hot": "ZUMY_HOT_RELOAD=1 bun run src/main.js",
    "deploy:guild": "bun run scripts/deploy-commands.js --guild",
    "deploy:global": "bun run scripts/deploy-commands.js --global"
  },
  "dependencies": {
    "discord.js": "^14.25.1"
  }
}
